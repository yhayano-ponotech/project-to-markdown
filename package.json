{
    "name": "project-to-markdown",
    "displayName": "Project To Markdown",
    "description": "A VSCode extension to export project files to markdown",
    "version": "0.0.2",
    "icon": "images/icon.png",
    "publisher": "Ponotech",
    "author": {
        "name": "Yas"
    },
    "license": "Apache-2.0",
    "keywords": [
        "markdown",
        "project",
        "file",
        "export"
    ],
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:project-to-markdown.export"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [{
            "command": "project-to-markdown.export",
            "title": "Export Project to Markdown"
        }],
        "configuration": {
            "title": "Project To Markdown",
            "properties": {
                "projectToMarkdown.includePattern": {
                    "type": "string",
                    "default": "**/*.{md,ts,js,py}",
                    "description": "Files to include in the export"
                },
                "projectToMarkdown.excludePattern": {
                    "type": "string",
                    "default": "**/node_modules/**",
                    "description": "Files to exclude from the export"
                },
                "projectToMarkdown.outputFileName": {
                    "type": "string",
                    "default": "CombinedProjectFiles.md",
                    "description": "Name of the output markdown file"
                },
                "projectToMarkdown.maxFileSize": {
                    "type": "number",
                    "default": 1048576,
                    "description": "Maximum file size in bytes (default: 1MB)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^14.14.37",
        "@types/vscode": "^1.60.0",
        "typescript": "^4.3.5"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/yhayano-ponotech/error-reporter.git"
    },
    "bugs": {
        "url": "https://github.com/yhayano-ponotech/error-reporter/issues"
    },
    "homepage": "https://github.com/yhayano-ponotech/error-reporter"
}
